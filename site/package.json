{
  "name": "site",
  "private": true,
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/surge/site.git"
  },
  "author": "Surge <surge@github.com>",
  "bugs": {
    "url": "https://github.com/surge/site/issues"
  },
  "homepage": "https://github.com/surge/site#readme",
  "scripts": {
    "postinstall": "cd server && npm install && npm audit fix",
    "clean": "concurrently \"rimraf coverage build *.log*\" \"npm:clean:relay\" \"npm:clean:codegen\"",
    "prestart": "npm run clean:relay && npm run relay && npm run clean:codegen && npm run codegen",
    "start": "concurrently \"npm:graphql\" \"npm:craco\" \"npm:w:relay\" \"npm:w:codegen\"",
    "craco": "craco start",
    "prebuild": "npm run clean && npm run relay && npm run codegen",
    "build": "craco build",
    "pretest": "npm run prestart",
    "test": "craco test",
    "eject": "react-scripts eject",
    "precheck-types": "npm run relay",
    "check-types": "tsc --noEmit",
    "clean:relay": "rimraf src/__generated__",
    "relay": "relay-compiler --src src --schema server/src/schemas/Root.gql --language typescript --artifactDirectory src/__generated__",
    "w:relay": "npm run relay -- --watch",
    "clean:codegen": "rimraf src/models/generated.ts server/models.ts",
    "codegen": "graphql-codegen -c codegen.yml",
    "w:codegen": "npm run codegen -- -w",
    "graphql": "cd server && npm start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check-types"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "git reset"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/helpers/bootstrap.tsx",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/themes"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "lines": 100,
        "functions": 100
      }
    },
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "cracoConfig": "config/craco.config.js",
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "fetch": true
    },
    "rules": {
      "no-async-promise-executor": "error",
      "no-await-in-loop": "error",
      "no-console": "error",
      "no-misleading-character-class": "error",
      "no-template-curly-in-string": "error",
      "require-atomic-updates": "error"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "babelMacros": {
    "relay": {
      "artifactDirectory": "src/__generated__"
    }
  },
  "proxy": "http://localhost:4000",
  "dependencies": {
    "@loadable/component": "^5.10.2",
    "@queso/camel-case": "^0.1.1",
    "@queso/kebab-case": "^1.0.1",
    "babel-plugin-relay": "^5.0.0",
    "immutability-helper": "^3.0.1",
    "ky": "^0.11.1",
    "ky-universal": "^0.2.2",
    "pathjoin": "0.0.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-intl": "^2.9.0",
    "react-redux": "^7.1.0",
    "react-relay": "^5.0.0",
    "react-router-dom": "^5.0.1",
    "react-theme-context": "^2.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@craco/craco": "^5.2.4",
    "@graphql-codegen/cli": "^1.4.0",
    "@graphql-codegen/introspection": "^1.4.0",
    "@graphql-codegen/typescript": "^1.4.0",
    "@graphql-codegen/typescript-graphql-files-modules": "^1.4.0",
    "@graphql-codegen/typescript-operations": "^1.4.0",
    "@graphql-codegen/typescript-resolvers": "^1.4.0",
    "@jedmao/redux-mock-store": "^2.0.2",
    "@jedmao/storage": "^2.0.1",
    "@jedmao/tsconfig": "^0.3.0",
    "@playlyfe/gql": "^2.6.1",
    "@testing-library/react": "^8.0.5",
    "@types/fetch-mock": "^7.3.1",
    "@types/graphql": "^14.2.2",
    "@types/jest": "^24.0.15",
    "@types/loadable__component": "^5.10.0",
    "@types/node": "^12.6.6",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.8",
    "@types/react-intl": "^2.3.18",
    "@types/react-redux": "^7.1.1",
    "@types/react-relay": "^5.0.0",
    "@types/react-router-dom": "^4.3.4",
    "@types/redux-logger": "^3.0.7",
    "@types/redux-mock-store": "^1.0.1",
    "@types/webpack-env": "^1.14.0",
    "concurrently": "^4.1.1",
    "core-js": "^2.6.9",
    "fetch-mock": "^7.3.6",
    "graphql": "^14.4.2",
    "graphql-tag-pluck": "^0.8.3",
    "husky": "^3.0.0",
    "jest-fetch-mock": "^2.1.2",
    "linaria": "^1.3.1",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "react-scripts": "^3.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "relay-compiler": "^5.0.0",
    "relay-compiler-language-typescript": "^4.3.0",
    "relay-test-utils": "^5.0.0",
    "rimraf": "^2.6.3",
    "ts-essentials": "^3.0.0",
    "ts-helpers": "^1.1.2",
    "typescript": "^3.5.3"
  }
}
