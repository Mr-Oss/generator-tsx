{
  "name": "<%= appname %>",
  "private": true,
  "version": "<%= version %>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubUsername %>/<%= appname %>.git"
  },
  "author": "<%= gitName %> <<%= gitEmail %>>",
  "bugs": {
    "url": "https://github.com/<%= githubUsername %>/<%= appname %>/issues"
  },
  "homepage": "https://github.com/<%= githubUsername %>/<%= appname %>#readme",
  "scripts": {
    "postinstall": "cd server && npm install",
    "clean": "rimraf coverage build *.log* src/__generated__ src/models/generated.ts server/models.ts",
    "prestart": "npm run clean && concurrently \"npm:codegen\" \"npm:relay\"",
    "start": "concurrently \"npm:graphql\" \"npm:craco\" \"npm:w:codegen\" \"npm:w:relay\"",
    "craco": "craco start",
    "prebuild": "npm run clean",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "check-types": "tsc --noEmit",
    "precover": "rimraf coverage",
    "relay": "relay-compiler --src src --schema server/src/schemas/Root.gql --language typescript --artifactDirectory src/__generated__",
    "w:relay": "npm run relay -- --watch",
    "codegen": "graphql-codegen -c codegen.yml",
    "w:codegen": "npm run codegen -- -w",
    "graphql": "cd server && npm start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check-types"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "git reset"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "ignorePath": "src/__generated__",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/themes"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "lines": 100,
        "functions": 100
      }
    },
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "cracoConfig": "config/craco.config.js",
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "fetch": true
    },
    "rules": {
      "no-async-promise-executor": "error",
      "no-await-in-loop": "error",
      "no-console": "error",
      "no-misleading-character-class": "error",
      "no-template-curly-in-string": "error",
      "require-atomic-updates": "error"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "babelMacros": {
    "relay": {
      "artifactDirectory": "src/__generated__"
    }
  },
  "proxy": "http://localhost:4000"
}
